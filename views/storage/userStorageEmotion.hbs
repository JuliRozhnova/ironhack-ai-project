<div class="row">
  <div class="col s12">
    <a href="/storage/{{user._id}}">Go back</a>
  </div>
</div>
<div class="row valign-wrapper">
  <div class="col s10">
    <p>Emotion {{emotion.emotion}} from {{user.username}}</p>
  </div>
  {{#if ownerRights}}
  <div class="col s2">
    <a class="btn waves-effect waves-light right" href="/storage/{{user._id}}/{{_id}}/delete">Delete</a>
  </div>
  {{/if}}
</div>
<div class="row">
  {{#each emotion.playlists}}
  <div class="col s12 m6">
    <div class="card">
      <div class="card-image">
        <iframe width="560" height="315" src="https://www.youtube.com/embed/videoseries?list={{itemId}}" frameborder="0"
          allow="autoplay; encrypted-media" allowfullscreen></iframe>
        <a class="btn-floating halfway-fab waves-effect waves-light red"
          href="https://www.youtube.com/channel/{{channelId}}" alt='{{title}}' target="_blank"><i class="material-icons"
            title="Watch on youtube">video_library</i></a>
      </div>
      <div class="card-content">
        <h3>{{title}}</h3>
        {{#if description}}
        <p>{{description}}</p>
        {{/if}}
      </div>
    </div>
  </div>
  {{/each}}
</div>