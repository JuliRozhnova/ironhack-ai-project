<div class="row">
  <div class="col s12">
    <h2>Signup</h2>
  </div>
  <form action="/auth/signup" method="POST" id="form-container" class="col s12">
    <div class="row">
      <div class="input-field col s12">
        <input id="username" type="text" name="username" placeholder="JonSnow">
        <label for="username">Username</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input id="password" type="password" name="password" placeholder="Your password">
        <label for="password">Password</label>
      </div>
    </div>
    {{#if message }}
    <div class="row">
      <div class="col s12 error-message">
        {{ message }}
      </div>
    </div>
    {{/if}}
    <div class="row">
      <div class="col s12">
        <button class="btn waves-effect waves-light">Create account</button>
      </div>
      <div class="col s12">
        <p class="account-message">
          Do you already have an account?
          <a class="link" href="/auth/login">Login</a>
        </p>
      </div>
    </div>
  </form>
</div>